generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model HighScore {
  id        String     @id @default(cuid())
  userId    String
  
  mode      String

  username  String
  value     Int

  link      String?

  @@map(name: "highscores")
}